<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/choice_answer_background">
    <net.igenius.customcheckbox.CustomCheckBox
        android:id="@+id/answer_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:color_tick="@color/colorAccent"
        app:color_unchecked_stroke="@color/colorAccent"
        app:color_checked="@color/colorPrimaryDark"
        app:color_unchecked="@color/colorPrimary"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/answer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is an answer."
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/answer_check_box"
        app:layout_constraintTop_toTopOf="@id/answer_check_box"
        app:layout_constraintBottom_toBottomOf="@id/answer_check_box"
        />
</androidx.constraintlayout.widget.ConstraintLayout>